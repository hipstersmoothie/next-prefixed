{
  "name": "next-prefixed",
  "version": "0.0.6",
  "description": "Prefix next links and images. Useful when serving from basePath.",
  "main": "dist/index.js",
  "source": "src/index.js",
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hipstersmoothie/next-prefixed"
  },
  "scripts": {
    "test": "jest",
    "lint": "xo",
    "build": "babel src/index.js -d dist/  --ignore '**/*.test.js'",
    "build:watch": "npm run build -- --watch",
    "prerelease": "npm run build",
    "release": "github-semantic-version --bump --changelog --push --publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "github-semantic-version": "^7.6.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "next": "^7.0.2",
    "prettier": "^1.14.3",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-test-renderer": "^16.6.0",
    "xo": "^0.23.0"
  },
  "peerDependencies": {
    "next": ">7.x",
    "react": ">16.x"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "xo": {
    "env": [
      "dom",
      "jest"
    ],
    "extends": [
      "prettier",
      "xo-react/space"
    ],
    "rules": {
      "import/no-unresolved": 0,
      "react/jsx-tag-spacing": 0
    },
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/preset-react"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "gsv": {
    "majorLabel": "Version: Major",
    "minorLabel": "Version: Minor",
    "patchLabel": "Version: Patch",
    "internalLabel": "No version: Internal"
  }
}
